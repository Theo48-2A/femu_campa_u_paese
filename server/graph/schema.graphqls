type User {
  id: ID!
  username: String!
  email: String!
  phoneNumber: String
  createdAt: String!
}

type AuthResponse {
  user: User!
  token: String!
  message : String
}

type Mutation {
  register(username: String!, password: String!, email: String!, phoneNumber: String): AuthResponse!
  login(username: String!, password: String!): AuthResponse!
}

type Query {
  searchUsers(prefix: String!, limit: Int = 10): [User]!
}
