type UserAccount {
  id: ID!
  username: String!
  email: String!
  phoneNumber: String
  createdAt: String!
  profile: UserProfile  
}

type UserProfile {
  id: ID!
  description: String
  avatarUrl: String
  username: String!
}


type AuthResponse {
  user: UserAccount!
  token: String!
  message: String
}

type Mutation {
  register(username: String!, password: String!, email: String!, phoneNumber: String): AuthResponse!
  login(username: String!, password: String!): AuthResponse!
  updateProfilDescription(description: String): UserProfile! 
}

type Query {
  searchUsers(prefix: String!, limit: Int = 10): [UserAccount]!
  getUserProfile(userId: ID!): UserProfile! 
}
